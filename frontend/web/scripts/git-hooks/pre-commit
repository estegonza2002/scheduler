#!/bin/sh
# Design System pre-commit hook
# Copy this file to .git/hooks/pre-commit to enable

# Get list of staged TypeScript/React files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.tsx\|\.jsx\|\.ts\|\.js$")

if [[ "$STAGED_FILES" = "" ]]; then
  echo "‚úì No TypeScript/React files staged - skipping design system linting"
  exit 0
fi

echo "üîç Running design system ESLint rules on staged files..."

# Store exit code
EXIT_CODE=0

for FILE in $STAGED_FILES
do
  # Skip files in node_modules and dist directories
  if [[ "$FILE" == *"node_modules/"* || "$FILE" == *"dist/"* ]]; then
    continue
  fi
  
  # Only check tsx files with our specific rules
  if [[ "$FILE" == *".tsx" ]]; then
    npx eslint --config .eslintrc.design-system.js "$FILE"
    
    if [[ "$?" == 0 ]]; then
      echo "  ‚úÖ $FILE passed design system checks"
    else
      echo "  ‚ùå $FILE failed design system checks"
      EXIT_CODE=1
    fi
  fi
done

if [[ "$EXIT_CODE" == 0 ]]; then
  echo "‚ú® All staged files passed design system checks!"
else
  echo "‚ùå Some files failed design system checks. Please fix the issues before committing."
  echo "   You can bypass this check with 'git commit --no-verify' if necessary."
fi

exit $EXIT_CODE 